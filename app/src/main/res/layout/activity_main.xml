<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.anna_.screenwallmenager.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_bar"
        android:layout_centerVertical="true"
        android:id="@+id/imageView55" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageView55"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp">


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_shuffle"
            android:layout_weight="0.61"
            android:onClick="shuffle"
            android:id="@+id/btn_shuffle"
            />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_stop"
            android:layout_weight="0.61"
            android:onClick="stop"
            android:id="@+id/btn_stop"
             />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_bkwd"
            android:layout_weight="0.61"
            android:onClick="backward"
            android:id="@+id/btn_bkwd"
            />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_play"
            android:onClick="play"
            android:id="@+id/btn_play"
            android:layout_weight="0.61" />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_pause"
            android:onClick="pause"
            android:id="@+id/btn_pause"
            android:layout_weight="0.61" />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_fwd"
            android:onClick="forward"
            android:id="@+id/btn_fwd"
            android:layout_weight="0.61" />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_repete"
            android:onClick="repeat"
            android:id="@+id/btn_repeat"
            android:layout_weight="0.61" />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_sound"
            android:onClick="sound"
            android:id="@+id/btn_sound"
            android:layout_weight="0.61" />

    </LinearLayout>

</RelativeLayout>
